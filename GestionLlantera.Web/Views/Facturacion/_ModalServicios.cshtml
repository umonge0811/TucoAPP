
<!-- Modal de Servicios -->
<div class="modal fade" id="modalServicios" tabindex="-1" aria-labelledby="modalServiciosLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalServiciosLabel">
                    <i class="bi bi-tools me-2"></i>Servicios Disponibles
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Filtros de búsqueda -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="busquedaServicios" class="form-label">
                            <i class="bi bi-search me-1"></i>Buscar Servicios:
                        </label>
                        <input type="text" 
                               class="form-control" 
                               id="busquedaServicios" 
                               placeholder="Buscar por nombre o descripción..."
                               autocomplete="off">
                    </div>
                    <div class="col-md-4">
                        <label for="tipoServicioFiltro" class="form-label">
                            <i class="bi bi-funnel me-1"></i>Tipo de Servicio:
                        </label>
                        <select class="form-select" id="tipoServicioFiltro">
                            <option value="">Todos los tipos</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="estadoServicioFiltro" class="form-label">
                            <i class="bi bi-toggle-on me-1"></i>Estado:
                        </label>
                        <select class="form-select" id="estadoServicioFiltro">
                            <option value="">Todos</option>
                            <option value="activos" selected>Solo Activos</option>
                            <option value="inactivos">Solo Inactivos</option>
                        </select>
                    </div>
                </div>

                <!-- Loading -->
                <div id="serviciosLoading" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando servicios...</span>
                    </div>
                    <p class="mt-2 text-muted">Cargando servicios disponibles...</p>
                </div>

                <!-- Contenido de servicios -->
                <div id="serviciosContent" style="display: none;">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-primary">
                                <tr>
                                    <th>Servicio</th>
                                    <th>Tipo</th>
                                    <th class="text-end">Precio Base</th>
                                    <th class="text-center">Estado</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="serviciosTableBody">
                                <!-- Servicios se cargan dinámicamente -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Sin resultados -->
                <div id="serviciosEmpty" class="text-center py-4" style="display: none;">
                    <i class="bi bi-tools text-muted" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">No hay servicios disponibles</h5>
                    <p class="text-muted">No se encontraron servicios con los filtros aplicados</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para agregar servicio al carrito -->
<div class="modal fade" id="modalAgregarServicio" tabindex="-1" aria-labelledby="modalAgregarServicioLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="modalAgregarServicioLabel">
                    <i class="bi bi-cart-plus me-2"></i>Agregar Servicio
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="detalleServicioSeleccionado">
                    <!-- Se llena dinámicamente -->
                </div>
                
                <div class="mb-3">
                    <label for="cantidadServicio" class="form-label">
                        <i class="bi bi-123 me-1"></i>Cantidad:
                    </label>
                    <div class="input-group" style="max-width: 200px;">
                        <button type="button" class="btn btn-outline-secondary" id="btnMenosCantidadServicio">-</button>
                        <input type="number" 
                               class="form-control text-center fw-bold" 
                               id="cantidadServicio" 
                               value="1" 
                               min="1" 
                               max="10"
                               style="font-size: 16px;">
                        <button type="button" class="btn btn-outline-secondary" id="btnMasCantidadServicio">+</button>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="observacionesServicio" class="form-label">
                        <i class="bi bi-chat-text me-1"></i>Observaciones (opcional):
                    </label>
                    <textarea class="form-control" 
                              id="observacionesServicio" 
                              rows="3" 
                              placeholder="Detalles adicionales del servicio..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-success" id="btnConfirmarAgregarServicio">
                    <i class="bi bi-cart-plus me-1"></i>Agregar al Carrito
                </button>
            </div>
        </div>
    </div>
</div>

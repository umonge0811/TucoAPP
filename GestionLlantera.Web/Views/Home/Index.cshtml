@{
    ViewData["Title"] = "Inicio";
}

@* Hero Section *@
<div class="hero-section">
    <div class="position-absolute w-100 h-100">
        <img src="https://images.unsplash.com/photo-1486006920555-c77dcf18193c?auto=format&fit=crop&q=80&w=2070"
             alt="Llantera Hero"
             class="w-100 h-100 object-fit-cover" />
        <div class="overlay"></div>
    </div>
    <div class="container h-100">
        <div class="d-flex align-items-center h-100">
            <div class="hero-content text-white">
                <h1 class="display-4 fw-bold mb-4">Llantas y más TC</h1>
                <p class="fs-4 mb-4">Tu mejor opción en llantas y servicios automotrices. Calidad y profesionalismo garantizado.</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="@Url.Action("Productos", "Public")" class="btn btn-primary-custom d-inline-flex align-items-center gap-2">
                        <i class="bi bi-grid-3x3-gap"></i>
                        Ver Productos
                    </a>
                    <a href="#contacto" class="btn btn-outline-light d-inline-flex align-items-center gap-2">
                        Agendar Servicio
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@* Features Section *@
<div class="py-5 bg-light">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-car-front feature-icon"></i>
                    <h3 class="fs-4 fw-bold mb-3">Calidad Premium</h3>
                    <p class="text-muted">Trabajamos con las mejores marcas del mercado para garantizar tu seguridad y satisfacción.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-wrench feature-icon"></i>
                    <h3 class="fs-4 fw-bold mb-3">Servicio Profesional</h3>
                    <p class="text-muted">Nuestro equipo de técnicos certificados te brinda la mejor atención personalizada.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-shield-check feature-icon"></i>
                    <h3 class="fs-4 fw-bold mb-3">Garantía Total</h3>
                    <p class="text-muted">Respaldamos todos nuestros productos y servicios con garantías reales.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@* Products Section *@
<div id="productos" class="py-5 bg-white">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6 d-flex align-items-center">
                <div>
                    <h2 class="display-6 fw-bold mb-4">Nuestros Productos</h2>
                    <p class="fs-5 text-muted mb-4">
                        Contamos con una amplia variedad de llantas y accesorios de las mejores marcas. 
                        Encuentra el producto perfecto para tu vehículo con stock actualizado en tiempo real.
                    </p>
                    <div class="d-flex gap-3 flex-wrap">
                        <a href="@Url.Action("Productos", "Public")" class="btn btn-primary btn-lg d-inline-flex align-items-center gap-2">
                            <i class="bi bi-grid-3x3-gap"></i>
                            Ver Todos los Productos
                        </a>
                        <a href="@Url.Action("Productos", "Public")" class="btn btn-outline-primary d-inline-flex align-items-center gap-2">
                            <i class="bi bi-search"></i>
                            Buscar Productos
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6">
                        <div class="product-preview-card">
                            <img src="https://images.unsplash.com/photo-1578844251758-2f71da64c96f?auto=format&fit=crop&q=80&w=500" 
                                 alt="Llantas Premium" class="w-100 rounded">
                            <div class="product-preview-overlay">
                                <h5 class="text-white fw-bold">Llantas Premium</h5>
                                <p class="text-white-50 mb-0">Alta calidad y durabilidad</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="product-preview-card">
                            <img src="https://images.unsplash.com/photo-1656232976683-7b688560e427?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                                 alt="Servicios" class="w-100 rounded">
                            <div class="product-preview-overlay">
                                <h5 class="text-white fw-bold">Servicios</h5>
                                <p class="text-white-50 mb-0">Mecánica rápida, tramado, balanceo</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Services Section *@
<div id="servicios" class="py-5 bg-light">
    <div class="container py-5">
        <h2 class="text-center display-6 fw-bold mb-5">Nuestros Servicios</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="service-card">
                    <img src="https://images.unsplash.com/photo-1578844251758-2f71da64c96f?auto=format&fit=crop&q=80&w=1000"
                         alt="Venta de Llantas"
                         class="w-100 object-fit-cover"
                         style="height: 300px;" />
                    <div class="service-content">
                        <h3 class="fs-4 fw-bold mb-2">Venta de Llantas</h3>
                        <p class="mb-0">Gran variedad de marcas y modelos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <img src="https://cdn.pixabay.com/photo/2016/10/18/08/58/mature-1749597_1280.jpg"
                         alt="Alineación y Balanceo"
                         class="w-100 object-fit-cover"
                         style="height: 300px;" />
                    <div class="service-content">
                        <h3 class="fs-4 fw-bold mb-2">Alineación y Balanceo</h3>
                        <p class="mb-0">Equipos de última generación</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <img src="https://images.unsplash.com/photo-1656232976683-7b688560e427?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                         alt="Servicio Mecánico"
                         class="w-100 object-fit-cover"
                         style="height: 300px;" />
                    <div class="service-content">
                        <h3 class="fs-4 fw-bold mb-2">Servicio Mecánico</h3>
                        <p class="mb-0">Mantenimiento integral</p>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

@* Contact Section *@
<div id="contacto" class="contact-section py-5">
    <div class="container py-5">
        <h2 class="text-center display-6 fw-bold mb-5">Contacto</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-telephone contact-icon"></i>
                    <div>
                        <h3 class="fs-5 fw-semibold mb-1">Teléfono</h3>
                        <p class="mb-0">+506 8916 6180</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-clock contact-icon"></i>
                    <div>
                        <h3 class="fs-5 fw-semibold mb-1">Horario</h3>
                        <p class="mb-0">Lun - Vie: 07:20 - 20:00</p>
                        <p class="mb-0">Sab: 07:20 - 17:00</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-geo-alt contact-icon"></i>
                    <div>
                        <h3 class="fs-5 fw-semibold mb-1">Dirección</h3>
                        <p class="mb-0">Guápiles, Pococí Limón</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
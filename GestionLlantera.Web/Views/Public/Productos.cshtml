@model List<Tuco.Clases.DTOs.Inventario.ProductoDTO>
@{
    ViewData["Title"] = "Productos Disponibles";
    Layout = "_Layout";
    <link href="~/css/views/public/productos.css" rel="stylesheet" />

}


<div class="productos-publicos-container">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 mb-3">
                        <i class="bi bi-collection me-3"></i>
                        Nuestros Productos
                    </h1>
                    <p class="lead mb-4">
                        Explora nuestra amplia selección de llantas y accesorios de alta calidad
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="hero-stats">
                        <div class="stat-item">
                            <i class="bi bi-award-fill"></i>
                            <span>Calidad Premium</span>
                        </div>
                        <div class="stat-item">
                            <i class="bi bi-shield-check-fill"></i>
                            <span>Garantía Incluida</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros y Búsqueda -->
    <div class="container mb-4">
        <!-- Búsqueda Minimalista -->
        <div class="filters-section bg-white rounded p-3 mb-3">
            <div class="row g-2 align-items-end">
                <div class="col-lg-6">
                    <label for="busquedaProductos" class="form-label text-muted mb-1" style="font-size: 0.9rem;">
                        <i class="bi bi-search me-1"></i>Buscar productos
                    </label>
                    <input type="text"
                           class="form-control"
                           id="busquedaProductos"
                           placeholder="Nombre, marca, modelo..."
                           autocomplete="off">
                </div>
                <div class="col-lg-4">
                    <label for="filtroCategoria" class="form-label text-muted mb-1" style="font-size: 0.9rem;">
                        <i class="bi bi-funnel me-1"></i>Categoría
                    </label>
                    <select class="form-select" id="filtroCategoria">
                        <option value="">Todas</option>
                        <option value="llanta">Llantas</option>
                        <option value="accesorio">Accesorios</option>
                    </select>
                </div>
                <div class="col-lg-2">
                    <button type="button"
                            class="btn btn-outline-secondary w-100"
                            onclick="limpiarTodosFiltros()"
                            style="font-size: 0.9rem;">
                        <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                    </button>
                </div>
            </div>
        </div>

        <!-- Buscador Inteligente de Llantas -->
        <div class="smart-tire-search bg-gradient rounded shadow-sm p-4" id="buscadorLlantas">
            <h5 class="mb-3">
                <i class="bi bi-gear-fill me-2 text-primary"></i>
                Búsqueda Inteligente de Llantas
            </h5>

            <!-- Tipo de Vehículo -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Tipo de Vehículo</label>
                    <div class="btn-group w-100" role="group">
                        <input type="radio" class="btn-check" name="tipoVehiculo" id="tipoAuto" value="auto" checked>
                        <label class="btn btn-outline-primary" for="tipoAuto">
                            <i class="bi bi-car-front me-2"></i>Auto/Camioneta
                        </label>
                        <input type="radio" class="btn-check" name="tipoVehiculo" id="tipoMoto" value="moto">
                        <label class="btn btn-outline-primary" for="tipoMoto">
                            <i class="bi bi-bicycle me-2"></i>Moto
                        </label>
                    </div>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="button" class="btn btn-outline-warning w-100" onclick="limpiarBuscadorLlantas()">
                        <i class="bi bi-eraser me-2"></i>Limpiar Búsqueda
                    </button>
                </div>
            </div>

            <!-- Medidas de Llantas -->
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="anchoLlanta" class="form-label fw-bold">
                        <i class="bi bi-arrows-expand me-1"></i>Ancho
                    </label>
                    <div class="input-group">
                        <input type="number"
                               class="form-control form-control-lg"
                               id="anchoLlanta"
                               placeholder="Ej: 205"
                               min="100"
                               max="999"
                               autocomplete="off">
                        <span class="input-group-text">mm</span>
                    </div>
                    <div id="sugerenciasAncho" class="suggestions-dropdown"></div>
                </div>

                <div class="col-md-4">
                    <label for="perfilLlanta" class="form-label fw-bold">
                        <i class="bi bi-aspect-ratio me-1"></i>Perfil
                    </label>
                    <select class="form-select form-select-lg" id="perfilLlanta" disabled>
                        <option value="">Selecciona perfil...</option>
                    </select>
                    <div id="sugerenciasPerfil" class="suggestions-dropdown"></div>
                </div>

                <div class="col-md-4">
                    <label for="diametroLlanta" class="form-label fw-bold">
                        <i class="bi bi-circle me-1"></i>Diámetro
                    </label>
                    <select class="form-select form-select-lg" id="diametroLlanta" disabled>
                        <option value="">Selecciona diámetro...</option>
                    </select>
                    <div id="sugerenciasDiametro" class="suggestions-dropdown"></div>
                </div>
            </div>

            <!-- Resultados de Búsqueda -->
            <div class="search-results mt-3" id="resultadosBusquedaLlantas" style="display: none;">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">
                        <i class="bi bi-funnel me-1"></i>
                        <span id="contadorResultados">0 llantas encontradas</span>
                    </span>
                    <button type="button" class="btn btn-sm btn-success" onclick="aplicarFiltroLlantas()">
                        <i class="bi bi-check2 me-1"></i>Aplicar Filtro
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenedor Principal de Productos -->
    <div class="container">
        <div class="row" id="productosContainer">
            <!-- Los productos se cargarán aquí dinámicamente -->
        </div>

        <!-- Mensaje de Sin Resultados -->
        <div id="noResultados" style="display: none;">
            <div class="col-12">
                <div class="no-results-section text-center py-5">
                    <div class="no-results-icon mb-4">
                        <i class="bi bi-search display-1 text-muted"></i>
                    </div>
                    <h3 class="text-muted mb-3">No se encontraron productos</h3>
                    <p class="text-muted mb-4">
                        Intenta ajustar tus filtros de búsqueda o explora todas nuestras categorías
                    </p>
                    <button class="btn btn-primary btn-lg" onclick="limpiarFiltros()">
                        <i class="bi bi-arrow-clockwise me-2"></i>Ver todos los productos
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-12">
                <div class="footer-info bg-light rounded p-4 text-center">
                    <h5 class="mb-3">
                        <i class="bi bi-telephone-fill me-2"></i>
                        ¿Necesitas ayuda?
                    </h5>
                    <p class="mb-2">
                        Contáctanos para recibir asesoría personalizada sobre nuestros productos
                    </p>
                    <div class="contact-buttons">
                        <a href="tel:+50625551234" class="btn btn-success me-2">
                            <i class="bi bi-telephone-fill me-2"></i>Llamar
                        </a>
                        <a href="https://wa.me/50625551234" class="btn btn-success" target="_blank">
                            <i class="bi bi-whatsapp me-2"></i>WhatsApp
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/views/public/productos.js"></script>
}
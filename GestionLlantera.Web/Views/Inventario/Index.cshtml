@model List<Tuco.Clases.DTOs.Inventario.ProductoDTO>
@{
    ViewData["Title"] = "Inventario de Productos";
    Layout = "_AdminLayout";

    <link rel="stylesheet" href="~/css/views/inventario/exportar.css">
    <link rel="stylesheet" href="~/css/views/inventario/imagenes/imagenesModal.css">
    <link rel="stylesheet" href="~/css/views/inventario/filtrosAvanzados.css">
    <link rel="stylesheet" href="~/css/views/inventario/mobile.css">

    <!-- ✅ NUEVA LÍNEA -->
}
<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Dashboard")" class="text-decoration-none">
                    <i class="bi bi-house-door me-1"></i>Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="bi bi-box-seam me-1"></i>Inventario
            </li>
        </ol>
    </nav>
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-box-seam me-2"></i>
            Inventario de Productos
        </h2>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-outline-primary" id="btnExportar">
                <i class="bi bi-download me-2"></i>Exportar
            </button>
            <a asp-controller="Inventario" asp-action="ProgramarInventario"
               class="btn btn-info" asp-permiso="Programar Inventario">
                <i class="bi bi-calendar-check me-2"></i>Programar Inventario
            </a>
            <a asp-controller="Inventario" asp-action="AgregarProducto"
               class="btn btn-primary" asp-permiso="Editar Productos">
                <i class="bi bi-plus-lg me-2"></i>Nuevo Producto
            </a>

        </div>
    </div>

    <!-- ✅ FILTROS AVANZADOS MEJORADOS -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="card-header">
                    <div class="filtros-header">
                        <div class="filtros-titulo">
                            <i class="bi bi-funnel me-2"></i>
                            <h3 class="mb-0">Filtros Avanzados</h3>
                            <span class="badge bg-primary ms-2" id="contadorFiltrosActivos" style="display: none;">0 activos</span>
                        </div>
                        <div class="filtros-controles">
                            <button type="button" class="btn btn-outline-danger btn-sm" id="btnLimpiarFiltros">
                                <i class="bi bi-x-circle me-1"></i>Limpiar Filtros
                            </button>
                            <button type="button" class="btn-colapsar-filtros" data-bs-toggle="collapse" data-bs-target="#filtrosAvanzados" aria-expanded="false">
                                <i class="bi bi-chevron-down" id="iconoColapsarFiltros"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body collapse" id="filtrosAvanzados">
                    <!-- Fila 1: Búsqueda y filtros básicos -->
                    <div class="row g-3 mb-3">
                        <div class="col-lg-4">
                            <label for="searchText" class="form-label">
                                <i class="bi bi-search me-1"></i>Buscar productos
                            </label>
                            <div class="input-group">
                                <input type="text" id="searchText" class="form-control" placeholder="Nombre, descripción, ID...">
                                <button class="btn btn-outline-secondary" type="button" id="btnLimpiarBusqueda">
                                    <i class="bi bi-x"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <label for="filterCategory" class="form-label">
                                <i class="bi bi-tags me-1"></i>Categoría
                            </label>
                            <select id="filterCategory" class="form-select">
                                <option value="">Todas las categorías</option>
                                <option value="llantas">🛞 Llantas</option>
                                <option value="accesorios">🔧 Accesorios</option>
                                <option value="herramientas">🛠️ Herramientas</option>
                            </select>
                        </div>
                        <div class="col-lg-3">
                            <label for="filterStock" class="form-label">
                                <i class="bi bi-box-seam me-1"></i>Nivel de Stock
                            </label>
                            <select id="filterStock" class="form-select">
                                <option value="">Todos los niveles</option>
                                <option value="low">📉 Stock Bajo</option>
                                <option value="normal">📊 Stock Normal</option>
                                <option value="high">📈 Stock Alto</option>
                            </select>
                        </div>
                        <div class="col-lg-2">
                            <label for="sortBy" class="form-label">
                                <i class="bi bi-sort-down me-1"></i>Ordenar por
                            </label>
                            <select id="sortBy" class="form-select">
                                <option value="name">Nombre A-Z</option>
                                <option value="price_asc">Precio ↑</option>
                                <option value="price_desc">Precio ↓</option>
                                <option value="stock">Stock ↑</option>
                            </select>
                        </div>
                    </div>

                    <!-- Fila 2: Filtros avanzados -->
                    <div class="row g-3 mb-3">
                        <div class="col-lg-3">
                            <label for="filterMarca" class="form-label">
                                <i class="bi bi-award me-1"></i>Marca/Modelo
                            </label>
                            <div class="position-relative">
                                <input type="text" id="filterMarca" class="form-control" placeholder="Buscar marca o modelo..." list="listaMarcas">
                                <datalist id="listaMarcas">
                                    <!-- Se llenará dinámicamente -->
                                </datalist>
                                <button class="btn btn-outline-secondary btn-sm position-absolute top-50 end-0 translate-middle-y me-1" type="button" id="btnLimpiarMarca" style="display: none;">
                                    <i class="bi bi-x"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <label class="form-label">
                                <i class="bi bi-currency-dollar me-1"></i>Rango de Precio
                            </label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text">₡</span>
                                        <input type="number" id="precioMin" class="form-control" placeholder="Mínimo" min="0">
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text">₡</span>
                                        <input type="number" id="precioMax" class="form-control" placeholder="Máximo" min="0">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <label class="form-label">
                                <i class="bi bi-box me-1"></i>Rango de Stock
                            </label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" id="stockMin" class="form-control form-control-sm" placeholder="Mín" min="0">
                                </div>
                                <div class="col-6">
                                    <input type="number" id="stockMax" class="form-control form-control-sm" placeholder="Máx" min="0">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <label class="form-label">
                                <i class="bi bi-percent me-1"></i>Utilidad %
                            </label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" id="utilidadMin" class="form-control form-control-sm" placeholder="Mín %" min="0" max="100">
                                </div>
                                <div class="col-6">
                                    <input type="number" id="utilidadMax" class="form-control form-control-sm" placeholder="Máx %" min="0" max="100">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Fila 3: Filtros específicos para llantas -->
                    <div class="row g-3" id="filtrosLlantas">
                        <div class="col-12">
                            <hr class="my-2">
                            <h6 class="text-muted mb-3">
                                <i class="bi bi-car-front me-1"></i>Filtros Específicos para Llantas
                            </h6>
                        </div>
                        <div class="col-lg-2">
                            <label for="filterAncho" class="form-label">Ancho</label>
                            <select id="filterAncho" class="form-select form-select-sm">
                                <option value="">Todos</option>
                                <!-- Se llenará dinámicamente -->
                            </select>
                        </div>
                        <div class="col-lg-2">
                            <label for="filterPerfil" class="form-label">Perfil</label>
                            <select id="filterPerfil" class="form-select form-select-sm">
                                <option value="">Todos</option>
                                <!-- Se llenará dinámicamente -->
                            </select>
                        </div>
                        <div class="col-lg-2">
                            <label for="filterDiametro" class="form-label">Diámetro</label>
                            <select id="filterDiametro" class="form-select form-select-sm">
                                <option value="">Todos</option>
                                <!-- Se llenará dinámicamente -->
                            </select>
                        </div>
                        <div class="col-lg-3">
                            <label for="filterTipoTerreno" class="form-label">Tipo de Terreno</label>
                            <select id="filterTipoTerreno" class="form-select form-select-sm">
                                <option value="">Todos</option>
                                <option value="carretera">Carretera</option>
                                <option value="mixto">Mixto</option>
                                <option value="todoterreno">Todo Terreno</option>
                                <option value="barro">Barro y Nieve</option>
                            </select>
                        </div>
                        <div class="col-lg-3">
                            <label for="filterVelocidad" class="form-label">Índice de Velocidad</label>
                            <select id="filterVelocidad" class="form-select form-select-sm">
                                <option value="">Todos</option>
                                <option value="H">H (210 km/h)</option>
                                <option value="V">V (240 km/h)</option>
                                <option value="W">W (270 km/h)</option>
                                <option value="Y">Y (300 km/h)</option>
                            </select>
                        </div>
                    </div>

                    <!-- Indicadores de filtros activos -->
                    <div class="row mt-3" id="indicadoresFiltros" style="display: none;">
                        <div class="col-12">
                            <div class="d-flex align-items-center gap-2 flex-wrap">
                                <small class="text-muted">Filtros activos:</small>
                                <div id="tagsFilttrosActivos" class="d-flex gap-1 flex-wrap">
                                    <!-- Los tags se generarán dinámicamente -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard-card">


        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>
                <i class="bi bi-box-seam me-2"></i>
                Productos (<span id="contadorProductos">@Model.Count</span>)
            </h3>
            <div class="d-flex gap-2 align-items-center">
                <div class="stock-indicator">
                    <span class="badge bg-danger me-1">Stock Bajo</span>
                    <span id="contadorStockBajo">@Model.Count(p => p.CantidadEnInventario <= p.StockMinimo)</span>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info d-flex align-items-center" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <div>
                        No hay productos registrados en el inventario.
                        <a asp-controller="Inventario" asp-action="AgregarProducto" class="alert-link">
                            Agregar un producto
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="table-container">
                    <table class="table table-hover">
                        <thead class="table-light table-fixed-header">
                            <tr>
                                <th class="sortable" data-column="id" data-type="number">
                                    ID
                                    <i class="bi bi-arrow-down-up ms-1 sort-icon opacity-50"></i>
                                </th>
                                <th>Imagen</th>
                                <th class="sortable" data-column="producto" data-type="text">
                                    Producto
                                    <i class="bi bi-arrow-down-up ms-1 sort-icon opacity-50"></i>
                                </th>
                                <th class="sortable" data-column="medidas" data-type="text">
                                    Medidas
                                    <i class="bi bi-arrow-down-up ms-1 sort-icon opacity-50"></i>
                                </th>
                                <th class="sortable" data-column="marca" data-type="text">
                                    Marca/Modelo
                                    <i class="bi bi-arrow-down-up ms-1 sort-icon opacity-50"></i>
                                </th>
                                <th class="sortable" data-column="costo" data-type="currency" asp-permiso="VerCostos">
                                    Costo
                                    <i class="bi bi-arrow-down-up ms-1 sort-icon opacity-50"></i>
                                </th>
                                <th class="sortable" data-column="utilidad" data-type="percentage" asp-permiso="Ver Utilidades">
                                    Utilidad %
                                    <i class="bi bi-arrow-down-up ms-1 sort-icon opacity-50"></i>
                                </th>
                                <th class="sortable" data-column="precio" data-type="currency">
                                    Precio Final
                                    <i class="bi bi-arrow-down-up ms-1 sort-icon opacity-50"></i>
                                </th>
                                <th class="sortable" data-column="stock" data-type="number">
                                    Stock
                                    <i class="bi bi-arrow-down-up ms-1 sort-icon opacity-50"></i>
                                </th>
                                <th class="sortable" data-column="stockmin" data-type="number">
                                    Stock Mín
                                    <i class="bi bi-arrow-down-up ms-1 sort-icon opacity-50"></i>
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in Model)
                            {
                                <tr class="@(producto.CantidadEnInventario <= producto.StockMinimo ? "table-danger" : "")" data-id="@producto.ProductoId">
                                    <!-- 1. ID -->
                                    <td>@producto.ProductoId</td>

                                    <!-- 2. Imagen -->
                                    <td style="cursor: pointer; padding: 8px;">
                                        <div class="producto-img-container"
                                             style="width: 50px; height: 50px; position: relative; display: flex; align-items: center; justify-content: center;">

                                            <!-- Enlace invisible para SEO y accesibilidad -->
                                            <a href="@Url.Action("DetalleProducto", "Inventario", new { id = producto.ProductoId })"
                                               class="producto-img-link"
                                               style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1; opacity: 0;"
                                               aria-label="Ver detalles de @producto.NombreProducto">
                                            </a>

                                            <!-- Contenedor de imagen visual -->
                                            <div class="producto-img-mini" style="width: 100%; height: 100%; position: relative; z-index: 2;">
                                                @if (producto.Imagenes != null && producto.Imagenes.Any())
                                                {
                                                    <img src="@producto.Imagenes.First().UrlImagen"

                                                         alt="@producto.NombreProducto"
                                                         style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;">
                                                }
                                                else
                                                {
                                                    <div class="sin-imagen-mini d-flex align-items-center justify-content-center"
                                                         style="width: 100%; height: 100%; background-color: #f5f5f5; border-radius: 4px; border: 2px dashed #dee2e6;">
                                                        <i class="bi bi-image" style="font-size: 1.5rem; color: #6c757d;"></i>
                                                    </div>
                                                }
                                            </div>

                                            <!-- Overlay hover para mejor UX -->
                                            <div class="hover-overlay"
                                                 style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;
                                                    background: rgba(0,123,255,0.1); border-radius: 4px;
                                                    opacity: 0; transition: opacity 0.2s; z-index: 3; pointer-events: none;">
                                            </div>
                                        </div>
                                    </td>

                                    <!-- 3. Producto -->
                                    <td>
                                        <strong>@producto.NombreProducto</strong>
                                        @if (!string.IsNullOrEmpty(producto.Descripcion))
                                        {
                                            <div class="small text-muted">@(producto.Descripcion.Length > 50 ? producto.Descripcion.Substring(0, 50) + "..." : producto.Descripcion)</div>
                                        }
                                        @if (producto.Llanta != null)
                                        {
                                            <span class="badge bg-primary">Llanta</span>
                                        }
                                    </td>
                                    <!-- 4. Medidas -->
                                    <td>
                                        @if (producto.Llanta != null)
                                        {
                                            <span class="medida-llanta">
                                                @if (producto.Llanta.Ancho.HasValue && !string.IsNullOrEmpty(producto.Llanta.Diametro))
                                                {
                                                    @if (producto.Llanta.Perfil.HasValue && producto.Llanta.Perfil.Value > 0)
                                                    {
                                                        <!-- Formato completo: 225/60/R16 -->
                                                        @($"{producto.Llanta.Ancho}/{producto.Llanta.Perfil}/R{producto.Llanta.Diametro}")
                                                    }
                                                    else
                                                    {
                                                        <!-- Formato sin perfil: 225/R16 -->
                                                        @($"{producto.Llanta.Ancho}/R{producto.Llanta.Diametro}")
                                                    }
                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>

                                    <!-- 5. Marca/Modelo -->
                                    <td>
                                        @if (producto.Llanta != null)
                                        {
                                            <div class="marca-modelo">
                                                @if (!string.IsNullOrEmpty(producto.Llanta.Marca) && !string.IsNullOrEmpty(producto.Llanta.Modelo))
                                                {
                                                    <span>@($"{producto.Llanta.Marca}/{producto.Llanta.Modelo}")</span>
                                                    @if (!string.IsNullOrEmpty(producto.Llanta.TipoTerreno))
                                                    {
                                                        <div class="small text-muted">@producto.Llanta.TipoTerreno</div>
                                                    }
                                                }
                                                else if (!string.IsNullOrEmpty(producto.Llanta.Marca))
                                                {
                                                    <span>@producto.Llanta.Marca</span>
                                                }
                                                else if (!string.IsNullOrEmpty(producto.Llanta.Modelo))
                                                {
                                                    <span>@producto.Llanta.Modelo</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin información</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>

                                    <!-- 6. Costo -->
                                    <td class="text-end" asp-permiso="VerCostos">
                                        @if (producto.Costo.HasValue)
                                        {
                                            <span class="text-muted small">₡@producto.Costo.Value.ToString("N0")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>

                                    <!-- 7. Utilidad % -->
                                    <td class="text-center" asp-permiso="Ver Utilidades">
                                        @if (producto.PorcentajeUtilidad.HasValue)
                                        {
                                            <span class="badge bg-info">@producto.PorcentajeUtilidad.Value.ToString("0.0")%</span>
                                            @if (producto.UtilidadEnDinero.HasValue)
                                            {
                                                <div class="small text-muted">₡@producto.UtilidadEnDinero.Value.ToString("N0")</div>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>

                                    <!-- 8. Precio Final -->
                                    <td class="text-end fw-bold">
                                        @if (producto.UsarCalculoAutomatico)
                                        {
                                            <!-- Precio calculado automáticamente -->
                                            <span class="text-success">₡@((producto.PrecioCalculado ?? 0).ToString("N0"))</span>
                                            <small class="d-block text-success">Calculado</small>
                                        }
                                        else
                                        {
                                            <!-- Precio manual -->
                                            <span class="text-primary">₡@((producto.Precio ?? 0).ToString("N0"))</span>
                                            <small class="d-block text-muted">Manual</small>
                                        }
                                    </td>

                                    <!-- 9. Stock -->
                                    <td class="text-center">
                                        <span class="@(producto.CantidadEnInventario <= producto.StockMinimo ? "text-danger fw-bold" : "")">
                                            @producto.CantidadEnInventario
                                            @if (producto.CantidadEnInventario <= producto.StockMinimo)
                                            {
                                                <i class="bi bi-exclamation-triangle-fill ms-1" data-bs-toggle="tooltip" title="Stock bajo"></i>
                                            }
                                        </span>
                                    </td>

                                    <!-- 10. Stock Mín -->
                                    <td class="text-center">
                                        @producto.StockMinimo
                                    </td>

                                    <!-- 11. Acciones -->
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-info ver-detalles-btn"
                                                    data-id="@producto.ProductoId" data-bs-toggle="tooltip" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <a href="@Url.Action("EditarProducto", "Inventario", new { id = producto.ProductoId })"
                                               class="btn btn-sm btn-primary" data-bs-toggle="tooltip" title="Editar"
                                               asp-permiso="Editar Productos">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-success ajuste-stock-btn"
                                                    data-id="@producto.ProductoId" data-bs-toggle="tooltip" title="Ajustar stock"
                                                    asp-permiso="Ajustar Stock">
                                                <i class="bi bi-plus-slash-minus"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger eliminar-producto-btn"
                                                    data-id="@producto.ProductoId" data-bs-toggle="tooltip" title="Eliminar"
                                                    asp-permiso="Eliminar Productos">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            <!-- ✅ CONTROLES DE PAGINACIÓN -->
            <div class="pagination-container mt-3">
                <div class="row align-items-center">
                    <!-- Información de registros -->
                    <div class="col-md-6">
                        <div class="pagination-info">
                            <span>Mostrando </span>
                            <span id="paginacion-inicio" class="fw-bold">1</span>
                            <span> a </span>
                            <span id="paginacion-fin" class="fw-bold">25</span>
                            <span> de </span>
                            <span id="paginacion-total" class="fw-bold">@Model.Count</span>
                            <span> productos</span>
                        </div>
                    </div>

                    <!-- Controles de navegación -->
                    <div class="col-md-6">
                        <div class="d-flex justify-content-end align-items-center gap-3">
                            <!-- Selector de productos por página -->
                            <div class="d-flex align-items-center">
                                <label for="productosPorPagina" class="form-label me-2 mb-0 small">Mostrar:</label>
                                <select id="productosPorPagina" class="form-select form-select-sm" style="width: auto;">
                                    <option value="10">10</option>
                                    <option value="25" selected>25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                    <option value="all">Todos</option>
                                </select>
                            </div>

                            <!-- Botones de navegación -->
                            <nav aria-label="Paginación de productos">
                                <ul class="pagination pagination-sm mb-0" id="paginacion-botones">
                                    <li class="page-item disabled" id="btn-primera">
                                        <a class="page-link" href="#" aria-label="Primera página">
                                            <i class="bi bi-chevron-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item disabled" id="btn-anterior">

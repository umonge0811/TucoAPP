                            <i class="bi bi-plus-lg me-2"></i>Agregar Producto
                        </a>
                    </div>
                }
                else
                {
                    @foreach (var producto in Model)
                    {
                        <div class="producto-card @(producto.CantidadEnInventario <= producto.StockMinimo ? "stock-bajo" : "")" data-id="@producto.ProductoId">
                            <!-- Header del card -->
                            <div class="producto-card-header">
                                <!-- Imagen -->
                                <div class="producto-card-imagen" onclick="cargarDetallesProducto(@producto.ProductoId)">
                                    @if (producto.Imagenes != null && producto.Imagenes.Any())
                                    {
                                        <img src="@producto.Imagenes.First().UrlImagen" alt="@producto.NombreProducto">
                                    }
                                    else
                                    {
                                        <i class="bi bi-image sin-imagen"></i>
                                    }
                                </div>

                                <!-- Info principal -->
                                <div class="producto-card-info">
                                    <div class="producto-card-titulo">@producto.NombreProducto</div>
                                    <div class="producto-card-id">ID: @producto.ProductoId</div>
                                    @if (!string.IsNullOrEmpty(producto.Descripcion))
                                    {
                                        <div class="producto-card-descripcion">
                                            @(producto.Descripcion.Length > 80 ? producto.Descripcion.Substring(0, 80) + "..." : producto.Descripcion)
                                        </div>
                                    }

                                    <!-- Badges -->
                                    <div class="producto-card-badges">
                                        @if (producto.Llanta != null)
                                        {
                                            <span class="badge bg-primary">🛞 Llanta</span>
                                        }
                                        @if (producto.CantidadEnInventario <= producto.StockMinimo)
                                        {
                                            <span class="badge bg-danger">⚠️ Stock Bajo</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Detalles principales -->
                            <div class="producto-card-detalles">
                                <div class="producto-detalle-item">
                                    <div class="producto-detalle-label">💰 Precio</div>
                                    <div class="producto-detalle-valor precio">
                                        @if (producto.UsarCalculoAutomatico)
                                        {
                                            <span>₡@((producto.PrecioCalculado ?? 0).ToString("N0"))</span>
                                            <small class="d-block text-success" style="font-size: 0.7rem;">Calculado</small>
                                        }
                                        else
                                        {
                                            <span>₡@((producto.Precio ?? 0).ToString("N0"))</span>
                                            <small class="d-block text-muted" style="font-size: 0.7rem;">Manual</small>
                                        }
                                    </div>
                                </div>

                                <div class="producto-detalle-item">
                                    <div class="producto-detalle-label">📦 Stock</div>
                                    <div class="producto-detalle-valor @(producto.CantidadEnInventario <= producto.StockMinimo ? "stock-bajo" : "stock-normal")">
                                        @producto.CantidadEnInventario
                                        <small class="d-block" style="font-size: 0.7rem;">Mín: @producto.StockMinimo</small>
                                    </div>
                                </div>
                            </div>

                            <!-- Información específica de llantas -->
                            @if (producto.Llanta != null)
                            {
                                <div class="producto-card-llantas">
                                    <div class="producto-card-llantas-titulo">
                                        <i class="bi bi-car-front"></i>
                                        Especificaciones de Llanta
                                    </div>
                                    <div class="producto-card-medidas">
                                        <div>
                                            <strong>Medidas:</strong>
                                            @if (producto.Llanta.Ancho.HasValue && producto.Llanta.Perfil.HasValue && !string.IsNullOrEmpty(producto.Llanta.Diametro))
                                            {
                                                <span>@($"{producto.Llanta.Ancho}/{producto.Llanta.Perfil}/R{producto.Llanta.Diametro}")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </div>
                                        <div>
                                            <strong>Marca:</strong>
                                            @if (!string.IsNullOrEmpty(producto.Llanta.Marca))
                                            {
                                                <span>@producto.Llanta.Marca</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Información adicional -->
                            @if (producto.Costo.HasValue || producto.PorcentajeUtilidad.HasValue)
                            {
                                <div class="producto-card-detalles" style="grid-template-columns: 1fr 1fr 1fr;">
                                    @if (producto.Costo.HasValue)
                                    {
                                        <div class="producto-detalle-item">
                                            <div class="producto-detalle-label">💳 Costo</div>
                                            <div class="producto-detalle-valor">₡@producto.Costo.Value.ToString("N0")</div>
                                        </div>
                                    }

                                    @if (producto.PorcentajeUtilidad.HasValue)
                                    {
                                        <div class="producto-detalle-item">
                                            <div class="producto-detalle-label">📊 Utilidad</div>
                                            <div class="producto-detalle-valor">@producto.PorcentajeUtilidad.Value.ToString("0.0")%</div>
                                        </div>
                                    }

                                    @if (producto.UtilidadEnDinero.HasValue)
                                    {
                                        <div class="producto-detalle-item">
                                            <div class="producto-detalle-label">💚 Ganancia</div>
                                            <div class="producto-detalle-valor">₡@producto.UtilidadEnDinero.Value.ToString("N0")</div>
                                        </div>
                                    }
                                </div>
                            }

                            <!-- Acciones -->
                            <div class="producto-card-acciones">
                                <a href="@Url.Action("DetalleProducto", "Inventario", new { id = producto.ProductoId })"
                                   class="btn btn-info">
                                    <i class="bi bi-eye"></i>
                                    Ver
                                </a>
                                <a href="@Url.Action("EditarProducto", "Inventario", new { id = producto.ProductoId })"
                                   class="btn btn-primary" asp-permiso="Editar Productos">
                                    <i class="bi bi-pencil"></i>
                                    Editar
                                </a>
                                <button type="button" class="btn btn-success ajuste-stock-btn"
                                        data-id="@producto.ProductoId" asp-permiso="Ajustar Stock">
                                    <i class="bi bi-plus-slash-minus"></i>
                                    Stock
                                </button>
                                <button type="button" class="btn btn-danger eliminar-producto-btn"
                                        data-id="@producto.ProductoId" asp-permiso="Eliminar Productos">
                                    <i class="bi bi-trash"></i>
                                    Eliminar
                                </button>
                            </div>
                        </div>

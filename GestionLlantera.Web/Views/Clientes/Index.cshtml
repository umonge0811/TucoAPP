
@{
    ViewData["Title"] = "Gestión de Clientes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/views/admin/clientes.css">

<div class="container-fluid">
    <div class="row">
        <!-- Panel principal -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-people me-2"></i>Gestión de Clientes
                        </h4>
                        <button type="button" 
                                id="btnNuevoCliente" 
                                class="btn btn-light btn-sm">
                            <i class="bi bi-person-plus me-1"></i>Nuevo Cliente
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Barra de búsqueda -->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" 
                                       id="buscarClientes" 
                                       class="form-control" 
                                       placeholder="Buscar por nombre, email, teléfono..."
                                       autocomplete="off">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <button type="button" 
                                    id="btnLimpiarFiltros" 
                                    class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                            </button>
                        </div>
                    </div>

                    <!-- Tabla de clientes -->
                    <div class="table-responsive">
                        <table class="table table-hover" id="tablaClientes">
                            <thead class="table-light">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Contacto</th>
                                    <th>Email</th>
                                    <th>Teléfono</th>
                                    <th>Dirección</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Se llena dinámicamente -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Estado de carga -->
                    <div id="estadoCarga" class="text-center py-4 d-none">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <p class="mt-2">Cargando clientes...</p>
                    </div>

                    <!-- Sin resultados -->
                    <div id="sinResultados" class="text-center py-4 d-none">
                        <i class="bi bi-people display-1 text-muted"></i>
                        <p class="mt-2 text-muted">No se encontraron clientes</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Nuevo/Editar Cliente -->
<div class="modal fade" id="modalCliente" tabindex="-1" aria-labelledby="modalClienteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalClienteLabel">Nuevo Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formCliente">
                    <input type="hidden" id="clienteId" value="0">
                    
                    <div class="mb-3">
                        <label for="nombreCliente" class="form-label">Nombre Completo *</label>
                        <input type="text" class="form-control" id="nombreCliente" required>
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="mb-3">
                        <label for="contactoCliente" class="form-label">Contacto</label>
                        <input type="text" class="form-control" id="contactoCliente">
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="mb-3">
                        <label for="emailCliente" class="form-label">Email</label>
                        <input type="email" class="form-control" id="emailCliente">
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="mb-3">
                        <label for="telefonoCliente" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="telefonoCliente">
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="mb-3">
                        <label for="direccionCliente" class="form-label">Dirección</label>
                        <textarea class="form-control" id="direccionCliente" rows="3"></textarea>
                        <div class="invalid-feedback"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarCliente">
                    <i class="bi bi-check-circle me-1"></i>Guardar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/views/clientes/clientes.js"></script>
}

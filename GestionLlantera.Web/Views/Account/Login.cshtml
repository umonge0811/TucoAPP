@model GestionLlantera.Web.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout";
}

<div class="container min-vh-100 d-flex align-items-center">
    <div class="row justify-content-center w-100">
        <div class="col-11 col-sm-8 col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-dark text-white py-3">
                    <h4 class="text-center mb-0">Iniciar Sesión</h4>
                </div>
                <div class="card-body px-4 py-4">
                    <form asp-action="Login" method="post" id="loginForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope-fill me-1"></i> Correo Electrónico
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contrasena" class="form-label">
                                <i class="bi bi-lock-fill me-1"></i> Contraseña
                            </label>
                            <div class="input-group">
                                <input asp-for="Contrasena" type="password" class="form-control" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="bi bi-eye-fill"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Contrasena" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="RecordarMe" class="form-check-input" />
                                <label asp-for="RecordarMe" class="form-check-label">Recordarme</label>
                            </div>
                            <a href="@Url.Action("OlvideContrasena", "Account")" class="text-primary">
                                ¿Olvidaste tu contraseña?
                            </a>
                        </div>

                        <button type="submit" class="btn btn-dark w-100" id="submitButton">
                            <span class="normal-state">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar Sesión
                            </span>
                            <span class="loading-state" style="display: none;">
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                Iniciando sesión...
                            </span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/views/account/login.js"></script>
    }
    
}
@using GestionLlantera.Web.Models.DTOs
@model List<UsuarioDTO>
@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/views/admin/usuarios.css" asp-append-version="true" />

<div class="container-fluid">
    <div class="page-header d-flex justify-content-between align-items-center mb-4">
        <h2>Gestión de Usuarios</h2>
        <a asp-controller="Usuarios" asp-action="CrearUsuario" class="btn btn-new-user">
            <i class="bi bi-person-plus"></i> Nuevo Usuario
        </a>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            No se pudieron cargar los usuarios. Por favor, intenta recargar la página.
        </div>
    }
    else if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No hay usuarios registrados en el sistema.
        </div>
    }
    else
    {
        <div class="users-card">
            <!-- Vista móvil -->
            <div class="d-block d-md-none">
                <div class="mobile-filters mb-3">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control" id="mobileBuscar" placeholder="Buscar usuario...">
                    </div>
                    <select class="form-select mt-2" id="mobileEstado">
                        <option value="">Todos los estados</option>
                        <option value="activo">Activos</option>
                        <option value="inactivo">Inactivos</option>
                    </select>
                </div>

                <div id="mobileUsersList">
                    @foreach (var usuario in Model)
                    {
                        <div class="user-card" data-estado="@(usuario.Activo ? "activo" : "inactivo")">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="mb-0">@usuario.NombreUsuario</h5>
                                    <span class="badge @(usuario.Activo ? "bg-success" : "bg-danger")">
                                        @(usuario.Activo ? "Activo" : "Inactivo")
                                    </span>
                                </div>
                                <p class="text-muted mb-3">@usuario.Email</p>
                                <div class="mb-3">
                                    @foreach (var rol in usuario.Roles)
                                    {
                                        <span class="badge bg-primary me-1">@rol</span>
                                    }
                                </div>
                                <div class="btn-group w-100">
                                    <button class="btn btn-outline-secondary" onclick="editarUsuarioModal(@usuario.UsuarioId)">
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>
                                    <button class="btn btn-outline-primary" onclick="editarRoles(@usuario.UsuarioId)">
                                        <i class="bi bi-shield"></i> Roles
                                    </button>
                                    @if (usuario.Activo)
                                    {
                                        <button class="btn btn-outline-danger" onclick="desactivarUsuario(@usuario.UsuarioId)">
                                            <i class="bi bi-person-x"></i> Desactivar
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-success" onclick="activarUsuario(@usuario.UsuarioId)">
                                            <i class="bi bi-person-check"></i> Activar
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Vista desktop -->
            <div class="table-responsive d-none d-md-block">
                <table id="tablaUsuarios" class="table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Estado</th>
                            <th>Top Vendedor</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td>@usuario.NombreUsuario</td>
                                <td>@usuario.Email</td>
                                <td>
                                    @foreach (var rol in usuario.Roles)
                                    {
                                        <span class="badge bg-primary me-1">@rol</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(usuario.Activo ? "bg-success" : "bg-danger")">
                                        @(usuario.Activo ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(usuario.EsTopVendedor ? "bg-warning text-dark" : "bg-secondary")">
                                        @if (usuario.EsTopVendedor)
                                        {
                                            <i class="bi bi-trophy me-1"></i>@:Habilitado
                                        }
                                        else
                                        {
                                            <i class="bi bi-dash-circle me-1"></i>@:No habilitado
                                        }
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-secondary" onclick="editarUsuarioModal(@usuario.UsuarioId)" 
                                                data-bs-toggle="tooltip" title="Editar Usuario">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-primary" onclick="editarRoles(@usuario.UsuarioId)"
                                                data-bs-toggle="tooltip" title="Editar Roles">
                                            <i class="bi bi-shield"></i>
                                        </button>
                                        @if (usuario.Activo)
                                        {
                                            <button class="btn btn-danger" onclick="desactivarUsuario(@usuario.UsuarioId)"
                                                    data-bs-toggle="tooltip" title="Desactivar Usuario">
                                                <i class="bi bi-person-x"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-success" onclick="activarUsuario(@usuario.UsuarioId)"
                                                    data-bs-toggle="tooltip" title="Activar Usuario">
                                                <i class="bi bi-person-check"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<!-- Modal para editar roles -->
<div class="modal fade" id="modalRoles" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Roles de Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="usuarioId" />
                <div id="listaRoles" class="mb-3">
                    <!-- Los roles se cargarán aquí dinámicamente -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="guardarRoles()">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para editar usuario -->
<div class="modal fade" id="modalEditarUsuario" tabindex="-1" aria-labelledby="modalEditarUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEditarUsuarioLabel">Editar Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarUsuario">
                    <input type="hidden" id="usuarioIdEditar" value="0">

                    <div class="mb-3">
                        <label for="nombreUsuarioEditar" class="form-label">
                            <i class="bi bi-person me-1"></i>Nombre de Usuario *
                        </label>
                        <input type="text" 
                               class="form-control" 
                               id="nombreUsuarioEditar" 
                               placeholder="Nombre de usuario"
                               required>
                        <div class="invalid-feedback"></div>
                        <small class="form-text text-muted">Nombre único del usuario en el sistema</small>
                    </div>

                    <div class="mb-3">
                        <label for="emailUsuarioEditar" class="form-label">
                            <i class="bi bi-envelope me-1"></i>Email *
                        </label>
                        <input type="email" 
                               class="form-control" 
                               id="emailUsuarioEditar"
                               placeholder="usuario@ejemplo.com"
                               required>
                        <div class="invalid-feedback"></div>
                        <small class="form-text text-muted">Correo electrónico válido</small>
                    </div>

                    <div class="mb-3">
                        <label for="rolUsuarioEditar" class="form-label">
                            <i class="bi bi-shield me-1"></i>Rol Principal
                        </label>
                        <select class="form-select" id="rolUsuarioEditar">
                            <option value="">Seleccione un rol...</option>
                            @if (ViewBag.Roles != null)
                            {
                                @foreach (var rol in ViewBag.Roles)
                                {
                                    <option value="@rol.RolId">@rol.NombreRol</option>
                                }
                            }
                        </select>
                        <div class="invalid-feedback"></div>
                        <small class="form-text text-muted">Rol principal del usuario</small>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="activoUsuarioEditar">
                            <label class="form-check-label" for="activoUsuarioEditar">
                                <i class="bi bi-check-circle me-1"></i>Usuario activo
                            </label>
                            <small class="form-text text-muted d-block">Determina si el usuario puede acceder al sistema</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="topVendedorUsuarioEditar">
                            <label class="form-check-label" for="topVendedorUsuarioEditar">
                                <i class="bi bi-trophy me-1"></i>Top Vendedor
                            </label>
                            <small class="form-text text-muted d-block">Marcar como vendedor destacado</small>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarUsuarioEditar">
                    <i class="bi bi-check-circle me-1"></i>Actualizar Usuario
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css">

    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>
    <script src="~/js/usuarios.js" asp-append-version="true"></script>
}
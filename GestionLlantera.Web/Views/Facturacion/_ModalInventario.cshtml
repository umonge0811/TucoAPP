<!-- Modal de Inventario -->
<div class="modal fade" id="modalInventario" tabindex="-1" aria-labelledby="modalInventarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-xxl" style="max-width: 95vw;">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="modalInventarioLabel">
                    <i class="bi bi-box-seam me-2"></i>Consultar Inventario
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <!-- Filtros de búsqueda -->
                <div class="bg-light p-3 border-bottom">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="busquedaInventarioModal"
                                       placeholder="Buscar por nombre o descripción...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="categoriaInventarioModal">
                                <option value="todas">Todas las categorías</option>
                                <option value="llantas">Llantas</option>
                                <option value="accesorios">Accesorios</option>
                                <option value="servicios">Servicios</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="stockInventarioModal">
                                <option value="">Todo el stock</option>
                                <option value="disponible">Con stock disponible</option>
                                <option value="agotado">Sin stock</option>
                                <option value="bajo">Stock bajo</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="button"
                                    class="btn btn-outline-secondary w-100"
                                    id="btnLimpiarFiltrosInventario">
                                <i class="bi bi-eraser me-1"></i>Limpiar
                            </button>
                        </div>
                    </div>

                    <!-- ✅ FILTROS DE LLANTAS -->
                    <div class="row g-3 mt-2">
                        <div class="col-12">
                            <hr class="my-2">
                            <h6 class="text-muted mb-3">
                                <i class="bi bi-car-front me-1"></i>Filtros Específicos para Llantas
                            </h6>
                        </div>
                        <div class="col-lg-2">
                            <label for="filterAncho" class="form-label small">Ancho</label>
                            <select id="filterAncho" class="form-select form-select-sm">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-lg-2">
                            <label for="filterPerfil" class="form-label small">Perfil</label>
                            <select id="filterPerfil" class="form-select form-select-sm">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-lg-2">
                            <label for="filterDiametro" class="form-label small">Diámetro</label>
                            <select id="filterDiametro" class="form-select form-select-sm">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-lg-2">
                            <label for="filterTipoTerreno" class="form-label small">Tipo de Terreno</label>
                            <select id="filterTipoTerreno" class="form-select form-select-sm">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-lg-2">
                            <label for="filterMarca" class="form-label small">Marca</label>
                            <select id="filterMarca" class="form-select form-select-sm">
                                <option value="">Todas</option>
                            </select>
                        </div>
                        <div class="col-lg-2">
                            <label for="filterVelocidad" class="form-label small">Índice Velocidad</label>
                            <select id="filterVelocidad" class="form-select form-select-sm">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-12 text-end">
                            <button type="button" class="btn btn-sm btn-outline-secondary" id="btnLimpiarFiltrosLlantas">
                                <i class="bi bi-x-circle me-1"></i>Limpiar Filtros de Llantas
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Loading -->
                <div id="inventarioModalLoading" class="d-none">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <p class="mt-2 text-muted">Cargando productos del inventario...</p>
                    </div>
                </div>

                <!-- ✅ TABLA CON SCROLL -->
                <div id="inventarioModalContent" style="display: none;">
                    <!-- Info de resultados -->
                    <div class="p-3 bg-light border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <div id="infoCantidadProductos" class="text-muted">
                                <i class="bi bi-box-seam me-2"></i>
                                <span id="cantidadProductosTexto">0 productos</span>
                            </div>
                        </div>
                    </div>

                    <!-- ✅ TABLA CON ALTURA FIJA Y SCROLL -->
                    <!-- ✅ TABLA CON ALTURA FIJA Y SCROLL (Corregida y mejorada) -->
                    <div class="table-responsive" style="max-height: 600px; overflow-y: auto; overflow-x: hidden;">
                        <table id="tablaInventarioFacturacion" class="table table-hover table-striped align-middle">
                            <thead class="table-dark" style="position: sticky; top: 0; z-index: 2;">
                                <tr>
                                    <th style="width: 220px; cursor: pointer;" data-column="nombre" class="sortable">
                                        Producto <i class="bi bi-arrow-down-up ms-1"></i>
                                    </th>
                                    <th style="width: 130px; cursor: pointer;" data-column="medida" class="sortable">
                                        Medida <i class="bi bi-arrow-down-up ms-1"></i>
                                    </th>
                                    <th style="width: 90px; cursor: pointer;" data-column="capas" class="sortable">
                                        Capas <i class="bi bi-arrow-down-up ms-1"></i>
                                    </th>
                                    <th style="width: 120px; cursor: pointer;" data-column="tipoTerreno" class="sortable">
                                        Tipo Terreno <i class="bi bi-arrow-down-up ms-1"></i>
                                    </th>
                                    <th style="width: 80px; cursor: pointer;" data-column="stock" class="sortable">
                                        Stock <i class="bi bi-arrow-down-up ms-1"></i>
                                    </th>
                                    <th style="width: 120px; cursor: pointer;" data-column="precioEfectivo" class="sortable">
                                        Precio Efectivo <i class="bi bi-arrow-down-up ms-1"></i>
                                    </th>
                                    <th style="width: 120px; cursor: pointer;" data-column="precioTarjeta" class="sortable">
                                        Precio Tarjeta <i class="bi bi-arrow-down-up ms-1"></i>
                                    </th>
                                    <th style="width: 90px;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="inventarioModalProductos">
                                <!-- Productos dinámicos -->
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
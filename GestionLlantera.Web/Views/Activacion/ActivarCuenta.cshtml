@using GestionLlantera.Web.Models.ViewModels
@model ActivacionCuentaViewModel
@{
    ViewData["Title"] = "Activar Cuenta";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg col-11 col-md-6 col-lg-4">
        <div class="card-header bg-primary text-white text-center py-3">
            <h4 class="mb-0">Activación de Cuenta</h4>
        </div>

        <div class="card-body p-4">
            @if (Model.TokenExpirado)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    El enlace de activación ha expirado
                </div>
                <div class="text-center mt-3">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        Volver al inicio
                    </a>
                </div>
            }
            else
            {
                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                }

                <form asp-controller="Activacion" asp-action="ActivarCuenta" method="post" id="activationForm">
                    <input type="hidden" asp-for="Token" />

                    <div class="mb-3">
                        <label asp-for="NuevaContrasena" class="form-label">Nueva Contraseña</label>
                        <div class="input-group">
                            <input asp-for="NuevaContrasena" class="form-control" type="password" />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('NuevaContrasena')">
                                <i class="bi bi-eye-fill"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmarContrasena" class="form-label">Confirmar Contraseña</label>
                        <div class="input-group">
                            <input asp-for="ConfirmarContrasena" class="form-control" type="password" />
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('ConfirmarContrasena')">
                                <i class="bi bi-eye-fill"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary position-relative" id="submitButton" style="min-height: 38px;">
                            <div class="normal-state w-100 d-inline-flex align-items-center justify-content-center">
                                <i class="bi bi-check-circle me-2"></i>Activar Cuenta
                            </div>
                            <div class="loading-state position-absolute w-100 h-100 top-0 start-0 d-none align-items-center justify-content-center">
                                <span class="spinner-border spinner-border-sm me-2"></span>Activando cuenta...
                            </div>
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/buttonUtils.js"></script>
    <script src="~/js/views/activacion/activarCuenta.js"></script>
}
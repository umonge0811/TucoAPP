                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <!-- INVENTARIOS MÓVIL -->
                    <li class="nav-item" asp-permiso="Menu_Inventario">
                        <a class="nav-link" data-bs-toggle="collapse" href="#inventarioMenuMobile">

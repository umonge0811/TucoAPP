@model GestionLlantera.Web.Models.DTOs.CreateUsuarioDTO
@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "_AdminLayout";
    var roles = ViewBag.Roles as List<RoleDTO> ?? new List<RoleDTO>();
}

<div class="container-fluid">
    <h2>Crear Usuario</h2>
    <div class="card">
        <div class="card-body">
            <form asp-action="Crear">
                <div class="mb-3">
                    <label asp-for="NombreUsuario" class="control-label">Nombre Usuario</label>
                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="control-label">Rol</label>
                    <select name="RolId" class="form-select" asp-items="@(new SelectList(roles, "RolId", "NombreRol"))">
                        <option value="">-- Seleccione un rol --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
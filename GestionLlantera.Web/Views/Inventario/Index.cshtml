<!-- Modal para visualizar imágenes -->
<div class="modal fade" id="imagenModal" tabindex="-1" aria-labelledby="imagenModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modalContent">
            <!-- El contenido se cargará dinámicamente aquí -->
            <div class="modal-body text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="mt-2">Cargando imágenes...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/views/inventario/inventario.js"></script>
    <script src="~/js/views/inventario/exportarInventario.js"></script>
    <script>
        // Función para cargar imágenes de un producto
        function verImagenesProducto(productoId) {
            // Obtener el elemento del modal
            const modalContent = document.getElementById('modalContent');

            // Mostrar spinner de carga
            modalContent.innerHTML = `
                <div class="modal-body text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2">Cargando imágenes...</p>
                </div>
            `;

            // Mostrar el modal
            const modal = new bootstrap.Modal(document.getElementById('imagenModal'));
            modal.show();

            // Cargar el contenido mediante AJAX
            fetch(`/Inventario/VerImagenes/${productoId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`Error del servidor: ${response.status}`);
                    }
                    return response.text();
                })
                .then(html => {
                    // Actualizar el contenido del modal con la respuesta
                    modalContent.innerHTML = html;
                })
                .catch(error => {
                    console.error('Error al cargar imágenes:', error);
                    modalContent.innerHTML = `
                        <div class="modal-header">
                            <h5 class="modal-title">Error</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                Ocurrió un error al cargar las imágenes: ${error.message}
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        </div>
                    `;
                });
        }


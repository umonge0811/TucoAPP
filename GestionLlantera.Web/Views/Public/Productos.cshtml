@model List<Tuco.Clases.DTOs.Inventario.ProductoDTO>
@{
    ViewData["Title"] = "Productos Disponibles";
    Layout = "_Layout";
    <link href="~/css/views/public/productos.css" rel="stylesheet" />

}

<style>
        .filtro-llantas-container {
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            border-radius: 12px;
            padding: 24px;
            margin-bottom: 24px;
            border: 1px solid #e9ecef;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            transition: box-shadow 0.3s ease;
        }

        .filtro-llantas-container:hover {
            box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        }

        .filtro-header h3 {
            color: #495057;
            font-size: 1.2rem;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .filtros-activos-counter .badge {
            font-size: 0.8rem;
            padding: 6px 12px;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .btn-clear-filter {
            position: absolute;
            right: 8px;
            top: 50%;
            transform: translateY(-50%);
            background: transparent;
            border: none;
            color: #6c757d;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
            z-index: 10;
        }

        .btn-clear-filter:hover {
            background: #dc3545;
            color: white;
            transform: translateY(-50%) scale(1.1);
        }

        .position-relative .form-select {
            padding-right: 40px;
        }

        .filtros-resumen {
            display: flex;
            align-items: center;
            min-height: 38px;
            padding: 8px 12px;
            background: rgba(13, 110, 253, 0.05);
            border-radius: 6px;
            border-left: 3px solid #0d6efd;
        }

        .form-label {
            margin-bottom: 8px;
            font-size: 0.9rem;
        }

        .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

        .btn-outline-danger.btn-sm {
            font-size: 0.85rem;
            padding: 6px 16px;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .btn-outline-danger.btn-sm:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.2);
        }

        /* Animación para mostrar/ocultar elementos */
        .fade-in {
            animation: fadeIn 0.3s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>

<div class="productos-publicos-container">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 mb-3">
                        <i class="bi bi-collection me-3"></i>
                        Nuestros Productos
                    </h1>
                    <p class="lead mb-4">
                        Explora nuestra amplia selección de llantas y accesorios de alta calidad
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="hero-stats">
                        <div class="stat-item">
                            <i class="bi bi-award-fill"></i>
                            <span>Calidad Premium</span>
                        </div>
                        <div class="stat-item">
                            <i class="bi bi-shield-check-fill"></i>
                            <span>Garantía Incluida</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtro Simple de Llantas -->
    <div class="container mb-4">
        <div class="card shadow-sm filtro-llantas-container">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-funnel me-2"></i>
                        Filtrar Llantas
                    </h5>
                    <div class="filtros-activos-counter">
                        <span class="badge bg-primary">0</span> Filtros activos
                    </div>
                </div>
                <div class="row g-3 position-relative">
                    <div class="col-md-3">
                        <label for="filtroMarca" class="form-label">Marca</label>
                        <select id="filtroMarca" class="form-select">
                            <option value="">Todas las marcas</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filtroAncho" class="form-label">Ancho</label>
                        <select id="filtroAncho" class="form-select">
                            <option value="">Todos</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filtroPerfil" class="form-label">Perfil</label>
                        <select id="filtroPerfil" class="form-select">
                            <option value="">Todos</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filtroDiametro" class="form-label">Diámetro</label>
                        <select id="filtroDiametro" class="form-select">
                            <option value="">Todos</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end justify-content-end">
                        <button id="btnLimpiarFiltros" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash-fill me-2"></i>
                            Limpiar Filtros
                        </button>
                    </div>
                </div>
                <div class="filtros-resumen mt-3 px-3 py-2" style="display: none;">
                    Resumen de filtros aplicados:
                </div>
            </div>
        </div>
    </div>

    <!-- Contenedor Principal de Productos -->
    <div class="container">
        <div class="row" id="productosContainer">
            <!-- Los productos se cargarán aquí dinámicamente -->
        </div>

        <!-- Mensaje de Sin Resultados -->
        <div id="noResultados" style="display: none;">
            <div class="col-12">
                <div class="no-results-section text-center py-5">
                    <div class="no-results-icon mb-4">
                        <i class="bi bi-search display-1 text-muted"></i>
                    </div>
                    <h3 class="text-muted mb-3">No se encontraron productos</h3>
                    <p class="text-muted mb-4">
                        Intenta ajustar tus filtros de búsqueda o explora todas nuestras categorías
                    </p>
                    <button class="btn btn-primary btn-lg" onclick="limpiarFiltros()">
                        <i class="bi bi-arrow-clockwise me-2"></i>Ver todos los productos
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-12">
                <div class="footer-info bg-light rounded p-4 text-center">
                    <h5 class="mb-3">
                        <i class="bi bi-telephone-fill me-2"></i>
                        ¿Necesitas ayuda?
                    </h5>
                    <p class="mb-2">
                        Contáctanos para recibir asesoría personalizada sobre nuestros productos
                    </p>
                    <div class="contact-buttons">
                        <a href="tel:+50625551234" class="btn btn-success me-2">
                            <i class="bi bi-telephone-fill me-2"></i>Llamar
                        </a>
                        <a href="https://wa.me/50625551234" class="btn btn-success" target="_blank">
                            <i class="bi bi-whatsapp me-2"></i>WhatsApp
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/views/public/productos.js"></script>
}
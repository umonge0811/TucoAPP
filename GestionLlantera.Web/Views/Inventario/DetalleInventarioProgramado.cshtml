@section Scripts {
    <script src="~/js/views/Inventario/detalle-inventario-programado.js" asp-append-version="true"></script>
    <script>
        // =====================================
        // FUNCI√ìN PARA CARGAR DISCREPANCIAS REALES
        // =====================================
        
        async function cargarDiscrepanciasReales(inventarioId) {
            try {
                console.log('üîç Cargando discrepancias reales para inventario:', inventarioId);
                
                // Mostrar loading
                $('#loadingDiscrepancias').show();
                $('#tablaDiscrepancias').hide();
                $('#noDiscrepancias').hide();
                $('#errorDiscrepancias').hide();
                
                // Hacer petici√≥n al controlador
                const response = await fetch(`/TomaInventario/ObtenerDiscrepancias/${inventarioId}`, {
                    method: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Content-Type': 'application/json'
                    }
                });
                
                if (!response.ok) {
                    throw new Error(`Error HTTP: ${response.status}`);
                }
                
                const resultado = await response.json();
                
                if (!resultado.success) {
                    throw new Error(resultado.message || 'Error al obtener discrepancias');
                }
                
                // Ocultar loading
                $('#loadingDiscrepancias').hide();
                
                const discrepancias = resultado.data || [];
                
                if (discrepancias.length === 0) {
                    $('#noDiscrepancias').show();
                    $('#tablaDiscrepancias').hide();
                } else {
                    renderizarDiscrepancias(discrepancias);
                    $('#tablaDiscrepancias').show();
                }
                
                console.log('‚úÖ Discrepancias cargadas exitosamente:', discrepancias.length);
                
            } catch (error) {
                console.error('‚ùå Error cargando discrepancias:', error);
                
                $('#loadingDiscrepancias').hide();
                $('#errorDiscrepancias').show();
                $('#tablaDiscrepancias').hide();
                $('#noDiscrepancias').hide();
            }
        }
        
        function renderizarDiscrepancias(discrepancias) {
            const tbody = $('#cuerpoTablaDiscrepancias');
            tbody.empty();
            
            discrepancias.forEach(item => {
                const diferencia = item.diferencia || 0;
                const claseTexto = diferencia > 0 ? 'text-success' : (diferencia < 0 ? 'text-danger' : 'text-muted');
                const iconoDiferencia = diferencia > 0 ? '+' : '';
                
                const fila = `
                    <tr>
                        <td class="fw-bold">${item.productoId}</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <div class="fw-medium">${item.nombreProducto}</div>
                                    ${item.medidasLlanta ? `<small class="text-muted">${item.medidasLlanta}</small>` : ''}
                                    ${item.marcaLlanta ? `<small class="text-muted d-block">${item.marcaLlanta}</small>` : ''}
                                </div>
                            </div>
                        </td>
                        <td class="text-center fw-medium">${item.cantidadSistema}</td>
                        <td class="text-center fw-medium">${item.cantidadFisica || 'Sin contar'}</td>
                        <td class="text-center">
                            <span class="badge ${diferencia > 0 ? 'bg-success' : (diferencia < 0 ? 'bg-danger' : 'bg-secondary')} fs-6">
                                ${iconoDiferencia}${diferencia}
                            </span>
                        </td>
                        <td>${item.nombreUsuarioConteo || 'Sin asignar'}</td>
                        <td>${item.fechaConteo ? new Date(item.fechaConteo).toLocaleDateString('es-ES') : 'Sin fecha'}</td>
                        <td>
                            ${item.observaciones ? 
                                `<span class="text-muted">${item.observaciones}</span>` : 
                                '<span class="text-muted fst-italic">Sin observaciones</span>'
                            }
                        </td>
                    </tr>
                `;
                
                tbody.append(fila);
            });
        }
        
        // Cargar autom√°ticamente al cargar la p√°gina si hay discrepancias
        $(document).ready(function() {
            @if (Model.Discrepancias > 0)
            {
                <text>
                setTimeout(() => {
                    cargarDiscrepanciasReales(@Model.InventarioProgramadoId);
                }, 1000);
                </text>
            }
        });
    </script>
}
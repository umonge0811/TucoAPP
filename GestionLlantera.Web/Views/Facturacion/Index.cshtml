<link rel="stylesheet" href="~/css/views/facturacion/facturacion.css">
<link rel="stylesheet" href="~/css/views/facturacion/mobile.css">

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Dashboard")">
                <i class="fas fa-home me-1"></i>Inicio
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <i class="fas fa-cash-register me-1"></i>Facturaci√≥n
        </li>
    </ol>
</nav>

<!-- Header de Facturaci√≥n -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-0">
                <i class="bi bi-receipt me-2"></i>Sistema de Facturaci√≥n
            </h2>
            <p class="text-muted mb-0">Gestiona ventas y procesa facturas</p>
        </div>
        <div class="d-flex gap-2">
            <button type="button" 
                    id="btnFacturasPendientes" 
                    class="btn btn-outline-warning"
                    title="Ver facturas pendientes"
                    style="display: none;">
                <i class="bi bi-clock-history me-1"></i>Facturas Pendientes
            </button>
            <button type="button" 
                    id="btnAbrirEntregaPendientes" 
                    class="btn btn-outline-info"
                    title="Entrega de productos pendientes">
                <i class="bi bi-truck me-1"></i>Entregas Pendientes
            </button>
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- Secci√≥n para entregas de pendientes -->
    <div class="row mb-4" id="seccionEntregaPendientes" style="display: none;">
        <div class="col-12">
            <div class="dashboard-card border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-truck me-2"></i>Entrega de Productos Pendientes
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-qr-code-scan"></i>
                                </span>
                                <input type="text" 
                                       id="codigoSeguimientoBusqueda" 
                                       class="form-control" 
                                       placeholder="Ingrese c√≥digo de seguimiento (ej: FAC-63-123)"
                                       autocomplete="off">
                                <button type="button" 
                                        id="btnBuscarPendiente" 
                                        class="btn btn-info">
                                    <i class="bi bi-search me-1"></i>Buscar
                                </button>
                            </div>
                            <small class="text-muted">Escanee o escriba el c√≥digo de seguimiento del producto pendiente</small>
                        </div>
                        <div class="col-md-4 text-end">
                            <button type="button" 
                                    id="btnCerrarEntregaPendientes" 
                                    class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cerrar
                            </button>
                        </div>
                    </div>

                    <!-- Resultados de b√∫squeda de pendientes -->
                    <div id="resultadosPendientes" class="mt-3" style="display: none;">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-info">
                                    <tr>
                                        <th>Producto</th>
                                        <th>Factura</th>
                                        <th>Cliente</th>
                                        <th>Cantidad Pendiente</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="tablaPendientesBody">
                                    <!-- Se llena din√°micamente -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Panel izquierdo - B√∫squeda y productos -->
        <div class="col-lg-8">
            <div class="dashboard-card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-search me-2"></i>Cat√°logo de Productos
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Barra de b√∫squeda mejorada -->
                    <div class="search-container mb-4">
                        <div class="row">
                            <div class="col-md-10">
                                <div class="position-relative">
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light">
                                            <i class="bi bi-search text-primary"></i>
                                        </span>
                                        <input type="text" 
                                               id="busquedaProducto" 
                                               class="form-control" 
                                               placeholder="Buscar productos por nombre, marca, modelo..."
                                               autocomplete="off">
                                        <button type="button" 
                                                class="btn btn-outline-secondary" 
                                                id="btnLimpiarBusqueda"
                                                title="Limpiar b√∫squeda">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button type="button" 
                                        id="btnAbrirInventario" 
                                        class="btn btn-outline-info w-100"
                                        title="Ver inventario completo">
                                    <i class="bi bi-grid-3x3-gap me-1"></i>
                                    <span class="d-none d-md-inline">Inventario</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Filtros r√°pidos -->
                    <div class="quick-filters mb-3">
                        <div class="d-flex flex-wrap gap-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary filter-btn active" data-filter="todos">
                                Todos los productos
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-success filter-btn" data-filter="stock">
                                Con stock
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-warning filter-btn" data-filter="bajo-stock">
                                Stock bajo
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger filter-btn" data-filter="sin-stock">
                                Sin stock
                            </button>
                        </div>
                    </div>

                    <!-- Contador de resultados -->
                    <div class="results-info mb-3">
                        <small class="text-muted">
                            <span id="contadorResultados">Cargando productos...</span>
                        </small>
                    </div>

                    <!-- Resultados de b√∫squeda -->
                    <div id="resultadosBusqueda" class="productos-grid">
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary mb-3" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="text-muted">Cargando productos disponibles...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel derecho - Carrito de venta -->
        <div class="col-lg-4">
            <div class="dashboard-card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-cart me-2"></i>Carrito de Venta
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Informaci√≥n del cliente -->
                    <div class="cliente-section mb-4">
                        <label class="form-label fw-bold d-flex align-items-center">
                            <i class="bi bi-person me-2"></i>
                            Cliente 
                            <span class="text-danger ms-1">*</span>
                            <small class="text-muted ms-2">(Requerido)</small>
                        </label>
                        <div class="input-group">
                            <input type="text" 
                                   id="clienteBusqueda" 
                                   class="form-control" 
                                   placeholder="Buscar cliente..."
                                   autocomplete="off">
                            <button type="button" 
                                    id="btnNuevoCliente" 
                                    class="btn btn-outline-primary"
                                    title="Agregar nuevo cliente">
                                <i class="bi bi-person-plus"></i>
                            </button>
                        </div>
                        <div id="clienteSeleccionado" class="d-none mt-2">
                            <div class="alert alert-info py-2 mb-0">
                                <small class="text-muted d-block">Cliente seleccionado:</small>
                                <strong id="nombreClienteSeleccionado"></strong>
                                <br><small id="emailClienteSeleccionado" class="text-muted"></small>
                            </div>
                        </div>
                    </div>

                    <!-- Lista de productos en venta -->
                    <div class="productos-section mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <label class="form-label fw-bold mb-0 d-flex align-items-center">
                                <i class="bi bi-bag me-2"></i>Productos
                            </label>
                            <span id="contadorProductos" class="badge bg-secondary">0 productos</span>
                        </div>

                        <div id="listaProductosVenta" class="productos-venta-container">
                            <div class="empty-cart text-center py-4">
                                <i class="bi bi-cart-x display-4 text-muted"></i>
                                <p class="text-muted mt-2 mb-0">Carrito vac√≠o</p>
                                <small class="text-muted">Busca y agrega productos</small>
                            </div>
                        </div>
                    </div>

                    <!-- Resumen de totales -->
                    <div class="totales-section border-top pt-3 mb-4">
                        <div class="row mb-2">
                            <div class="col-6">
                                <span class="fw-medium">Subtotal:</span>
                            </div>
                            <div class="col-6 text-end">
                                <span id="subtotalVenta" class="fw-medium">‚Ç°0.00</span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6">
                                <span class="fw-medium">IVA (13%):</span>
                            </div>
                            <div class="col-6 text-end">
                                <span id="ivaVenta" class="fw-medium">‚Ç°0.00</span>
                            </div>
                        </div>
                        <div class="row border-top pt-2">
                            <div class="col-6">
                                <h5 class="mb-0 fw-bold">Total:</h5>
                            </div>
                            <div class="col-6 text-end">
                                <h5 class="mb-0 text-success fw-bold">
                                    <span id="totalVenta">‚Ç°0.00</span>
                                </h5>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de acci√≥n -->
                    <div class="acciones-section">
                        <div class="d-grid gap-2">
                            <button type="button" 
                                    id="btnFinalizarVenta" 
                                    class="btn btn-success btn-lg"
                                    disabled>
                                <i class="bi bi-check-circle me-2"></i>Finalizar Venta
                            </button>
                            <div class="row">
                                <div class="col-6">
                                    <button type="button" 
                                            id="btnLimpiarVenta" 
                                            class="btn btn-outline-danger w-100"
                                            disabled>
                                        <i class="bi bi-trash me-1"></i>Limpiar
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button type="button" 
                                            id="btnNuevaVenta" 
                                            class="btn btn-outline-secondary w-100">
                                        <i class="bi bi-plus-circle me-1"></i>Nueva Venta
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card de ayuda -->
            <div class="dashboard-card mt-3">
                <div class="card-body text-center">
                    <i class="bi bi-info-circle text-primary mb-2" style="font-size: 2rem;"></i>
                    <h6 class="card-title">¬øNecesitas ayuda?</h6>
                    <p class="card-text small text-muted">
                        Busca productos, selecciona un cliente y agrega productos al carrito para procesar una venta.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modales -->
@await Html.PartialAsync("_ModalInventario")
@await Html.PartialAsync("_ModalDetalleProducto")
@await Html.PartialAsync("_ModalFinalizarVenta")

<!-- Modal de Problemas de Stock -->
<div class="modal fade" id="problemasStockModal" tabindex="-1" aria-labelledby="problemasStockModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="problemasStockModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Problemas de Stock Detectados
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <h6><i class="bi bi-info-circle me-2"></i>Informaci√≥n:</h6>
                    <p class="mb-0">Se han detectado productos con stock insuficiente en esta factura. Revisa los detalles y decide c√≥mo proceder.</p>
                </div>
                
                <div id="problemasStockLoading" class="text-center py-4">
                    <div class="spinner-border text-warning" role="status">
                        <span class="visually-hidden">Verificando stock...</span>
                    </div>
                </div>
                
                <div id="problemasStockContent" style="display: none;">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>N√∫mero de Factura:</strong><br>
                            <span class="text-primary fs-6" id="problemasStockFactura">-</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Cliente:</strong><br>
                            <span id="problemasStockCliente">-</span>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-warning">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Requerido</th>
                                    <th class="text-center">Disponible</th>
                                    <th class="text-center">Faltante</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="problemasStockTableBody">
                                <!-- Productos con problemas se cargan din√°micamente -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnCancelarProblemasStock" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-warning" id="btnFacturarTodosModos" onclick="facturarTodosModos()">
                    <i class="bi bi-exclamation-triangle me-1"></i>Procesar de Todas Formas
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Facturas Pendientes -->
<div class="modal fade" id="facturasPendientesModal" tabindex="-1" aria-labelledby="facturasPendientesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="facturasPendientesModalLabel">
                    <i class="bi bi-clock-history me-2"></i>Facturas Pendientes
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <h6><i class="bi bi-info-circle me-2"></i>Instrucciones:</h6>
                    <ul class="mb-0">
                        <li><strong>Completar:</strong> Marca la factura como pagada directamente</li>
                        <li><strong>Procesar:</strong> Abre el modal de finalizaci√≥n para configurar el pago</li>
                        <li><strong>Click en fila:</strong> Selecciona la factura (visual)</li>
                    </ul>
                </div>
                <div id="facturasPendientesLoading" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando facturas pendientes...</span>
                    </div>
                </div>
                <div id="facturasPendientesContent" style="display: none;">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-warning">
                                <tr>
                                    <th>N√∫mero de Factura</th>
                                    <th>Cliente</th>
                                    <th>Fecha y Cajero</th>
                                    <th>Total y M√©todo</th>
                                    <th>Estado</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="facturasPendientesTableBody">
                                <!-- Facturas se cargan din√°micamente -->
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="facturasPendientesEmpty" class="text-center py-4" style="display: none;">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">No hay facturas pendientes</h5>
                    <p class="text-muted">Todas las facturas han sido procesadas</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 11"></div>

@section Scripts {
    <script src="~/js/views/facturacion/facturacion.js"></script>

    <script>
        // ===== CONFIGURACI√ìN GLOBAL PARA FACTURACI√ìN =====
        window.facturaConfig = @Html.Raw(Json.Serialize(ViewBag.ConfiguracionFacturacion));
        console.log('üéØ === CONFIGURACI√ìN DE FACTURACI√ìN CARGADA ===');

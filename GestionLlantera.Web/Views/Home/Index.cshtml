@{
    ViewData["Title"] = "Inicio";
}

@* Hero Section *@
<div class="hero-section">
    <div class="position-absolute w-100 h-100">
        <img src="~/images/Hero 1.jpg"
             alt="Llantera Hero"
             class="w-100 h-100 object-fit-cover" />
        <div class="overlay"></div>
    </div>
    <div class="container h-100">
        <div class="d-flex align-items-center h-100">
            <div class="hero-content text-white">
                <h1 class="display-4 fw-bold mb-4">Llantas y más TC</h1>
                <p class="fs-4 mb-4">Tu mejor opción en llantas y servicios automotrices. Calidad y profesionalismo garantizado.</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="@Url.Action("Productos", "Public")" class="btn btn-primary-custom d-inline-flex align-items-center gap-2">
                        <i class="bi bi-grid-3x3-gap"></i>
                        Ver Productos
                    </a>
                    <a href="#contacto" class="btn btn-outline-light d-inline-flex align-items-center gap-2">
                        Agendar Servicio
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@* Features Section *@
<div class="py-5 bg-light">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-car-front feature-icon"></i>
                    <h3 class="fs-4 fw-bold mb-3">Calidad Premium</h3>
                    <p class="text-muted">Trabajamos con las mejores marcas del mercado para garantizar tu seguridad y satisfacción.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-wrench feature-icon"></i>
                    <h3 class="fs-4 fw-bold mb-3">Servicio Profesional</h3>
                    <p class="text-muted">Nuestro equipo de técnicos certificados te brinda la mejor atención personalizada.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-shield-check feature-icon"></i>
                    <h3 class="fs-4 fw-bold mb-3">Garantía Total</h3>
                    <p class="text-muted">Respaldamos todos nuestros productos y servicios con garantías reales.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@* Products Section *@
<div id="productos" class="py-5 bg-white">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6 d-flex align-items-center">
                <div>
                    <h2 class="display-6 fw-bold mb-4">Nuestros Productos</h2>
                    <p class="fs-5 text-muted mb-4">
                        Contamos con una amplia variedad de llantas y accesorios de las mejores marcas. 
                        Encuentra el producto perfecto para tu vehículo con stock actualizado en tiempo real.
                    </p>
                    <div class="d-flex gap-3 flex-wrap">
                        <a href="@Url.Action("Productos", "Public")" class="btn btn-primary btn-lg d-inline-flex align-items-center gap-2">
                            <i class="bi bi-grid-3x3-gap"></i>
                            Ver Todos los Productos
                        </a>
                        <a href="@Url.Action("Productos", "Public")" class="btn btn-outline-primary d-inline-flex align-items-center gap-2">
                            <i class="bi bi-search"></i>
                            Buscar Productos
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6">
                        <div class="product-preview-card">
                            <img src="https://images.unsplash.com/photo-1578844251758-2f71da64c96f?auto=format&fit=crop&q=80&w=500" 
                                 alt="Llantas para Automóvil" class="w-100 rounded">
                            <div class="product-preview-overlay">
                                <h5 class="text-white fw-bold">Llantas para Automóvil</h5>
                                <p class="text-white-50 mb-0">Calidad y seguridad garantizada</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="product-preview-card">
                            <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                                 alt="Llantas para Motocicletas" class="w-100 rounded">
                            <div class="product-preview-overlay">
                                <h5 class="text-white fw-bold">Llantas para Motocicletas</h5>
                                <p class="text-white-50 mb-0">Rendimiento y adherencia</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Services Section *@
<div id="servicios" class="py-5 bg-light">
    <div class="container py-5">
        <h2 class="text-center display-6 fw-bold mb-5">Nuestros Servicios</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="service-card">
                    <img src="https://images.unsplash.com/photo-1578844251758-2f71da64c96f?auto=format&fit=crop&q=80&w=1000"
                         alt="Venta de Llantas"
                         class="w-100 object-fit-cover"
                         style="height: 300px;" />
                    <div class="service-content">
                        <h3 class="fs-4 fw-bold mb-2">Venta de Llantas</h3>
                        <p class="mb-0">Gran variedad de marcas y modelos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <img src="https://cdn.pixabay.com/photo/2016/10/18/08/58/mature-1749597_1280.jpg"
                         alt="Alineación y Balanceo"
                         class="w-100 object-fit-cover"
                         style="height: 300px;" />
                    <div class="service-content">
                        <h3 class="fs-4 fw-bold mb-2">Alineación y Balanceo</h3>
                        <p class="mb-0">Equipos de última generación</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <img src="https://images.unsplash.com/photo-1656232976683-7b688560e427?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                         alt="Servicio Mecánico"
                         class="w-100 object-fit-cover"
                         style="height: 300px;" />
                    <div class="service-content">
                        <h3 class="fs-4 fw-bold mb-2">Servicio Mecánico</h3>
                        <p class="mb-0">Mantenimiento integral</p>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

@* Gallery Section *@
<div id="galeria" class="py-5 bg-white">
    <div class="container py-5">
        <h2 class="text-center display-6 fw-bold mb-5">Nuestra Galería</h2>
        <p class="text-center text-muted mb-5 fs-5">Conoce nuestras instalaciones y el trabajo que realizamos día a día</p>
        
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="gallery-item">
                    <img src="~/images/Galeria 1.jpg" 
                         alt="Instalaciones - Área de llantas" 
                         class="w-100 rounded shadow gallery-image"
                         data-bs-toggle="modal" 
                         data-bs-target="#galleryModal"
                         data-image="~/images/Galeria 1.jpg"
                         data-title="Área de Llantas"
                         data-description="Nuestra amplia selección de llantas de diferentes marcas y modelos">
                    <div class="gallery-overlay">
                        <i class="bi bi-zoom-in text-white fs-2"></i>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="gallery-item">
                    <img src="~/images/Galeria 2.jpg" 
                         alt="Servicio de alineación" 
                         class="w-100 rounded shadow gallery-image"
                         data-bs-toggle="modal" 
                         data-bs-target="#galleryModal"
                         data-image="~/images/Galeria 2.jpg"
                         data-title="Servicio de Alineación"
                         data-description="Equipo especializado para alineación y balanceo de última tecnología">
                    <div class="gallery-overlay">
                        <i class="bi bi-zoom-in text-white fs-2"></i>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="gallery-item">
                    <img src="~/images/Galeria 3.jpg" 
                         alt="Llantas para motocicletas" 
                         class="w-100 rounded shadow gallery-image"
                         data-bs-toggle="modal" 
                         data-bs-target="#galleryModal"
                         data-image="~/images/Galeria 3.jpg"
                         data-title="Llantas para Motocicletas"
                         data-description="Especialistas en llantas para motocicletas de todas las marcas">
                    <div class="gallery-overlay">
                        <i class="bi bi-zoom-in text-white fs-2"></i>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="gallery-item">
                    <img src="~/images/Galeria 4.jpg" 
                         alt="Taller mecánico" 
                         class="w-100 rounded shadow gallery-image"
                         data-bs-toggle="modal" 
                         data-bs-target="#galleryModal"
                         data-image="~/images/Galeria 4.jpg"
                         data-title="Taller Mecánico"
                         data-description="Instalaciones completas para servicios de mecánica general">
                    <div class="gallery-overlay">
                        <i class="bi bi-zoom-in text-white fs-2"></i>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="gallery-item">
                    <img src="~/images/Galeria 5.jpg" 
                         alt="Equipo de trabajo" 
                         class="w-100 rounded shadow gallery-image"
                         data-bs-toggle="modal" 
                         data-bs-target="#galleryModal"
                         data-image="~/images/Galeria 5.jpg"
                         data-title="Nuestro Equipo"
                         data-description="Técnicos especializados con años de experiencia en el sector">
                    <div class="gallery-overlay">
                        <i class="bi bi-zoom-in text-white fs-2"></i>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="gallery-item">
                    <img src="~/images/Galeria 6.jpg" 
                         alt="Instalaciones exteriores" 
                         class="w-100 rounded shadow gallery-image"
                         data-bs-toggle="modal" 
                         data-bs-target="#galleryModal"
                         data-image="~/images/Galeria 6.jpg"
                         data-title="Instalaciones"
                         data-description="Ubicados en Guápiles, Pococí Limón con fácil acceso">
                    <div class="gallery-overlay">
                        <i class="bi bi-zoom-in text-white fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Gallery Modal *@
<div class="modal fade" id="galleryModal" tabindex="-1" aria-labelledby="galleryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="galleryModalLabel">Imagen de Galería</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="galleryModalImage" src="" alt="" class="img-fluid rounded">
                <h6 class="mt-3 fw-bold" id="galleryModalTitle"></h6>
                <p class="text-muted" id="galleryModalDescription"></p>
            </div>
        </div>
    </div>
</div>

@* Contact Section *@
<div id="contacto" class="contact-section py-5">
    <div class="container py-5">
        <h2 class="text-center display-6 fw-bold mb-5">Contacto</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-telephone contact-icon"></i>
                    <div>
                        <h3 class="fs-5 fw-semibold mb-1">Teléfono</h3>
                        <p class="mb-0">+506 8916 6180</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-clock contact-icon"></i>
                    <div>
                        <h3 class="fs-5 fw-semibold mb-1">Horario</h3>
                        <p class="mb-0">Lun - Vie: 07:20 - 20:00</p>
                        <p class="mb-0">Sab: 07:20 - 17:00</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-geo-alt contact-icon"></i>
                    <div>
                        <h3 class="fs-5 fw-semibold mb-1">Dirección</h3>
                        <p class="mb-0">Guápiles, Pococí Limón</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>